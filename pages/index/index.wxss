/**index.wxss**/
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.category{
  width: 100%;
  height: 100rpx;
  z-index: 100;
  white-space: nowrap;
  background: rgba(255, 255, 255, 1);
}

.item{
  display: inline-flex;
  padding: 30rpx 40rpx;
  font-size: 30rpx;
  color: #999;
}

.item.active{
  border-bottom: 6rpx solid #f69;
  font-size: 32rpx;
  color: #f69;
}

.map-container{
  width: 100%;
}

.map-container map{
  width: 100%;
  height: 100vh;
  position: absolute;
  z-index: 10;
}