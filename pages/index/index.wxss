/**index.wxss**/
page{
  position: relative;
  width: 100%;
  height: 100vh;
}

.container{
  /*display: flex;
  flex-direction: column;*/
  width: 100%;
  height: 100%;
}

.category{
  width: 100%;
  height: 100rpx;
  z-index: 1000;
  white-space: nowrap;
  background: rgba(255, 255, 255, 1);
}

.item{
  display: inline-flex;
  padding: 30rpx 40rpx;
  font-size: 32rpx;
  color: #aaa;
}

.item.active{
  border-bottom: 6rpx solid #f69;
  font-size: 36rpx;
  color: #f69;
}

.map-container{
  width: 100%;
  position: relative;
  z-index: 1;
  height: 100vh;
}

.map-container map{
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100vh;
}