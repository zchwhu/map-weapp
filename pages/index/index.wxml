<!--index.wxml-->
<view class="container">
  <scroll-view scroll-x="true" class="category">
    <block wx:for="{{types}}" wx:for-item="type">
        <view class="item {{currentIndex===type.id? 'active' :''}}" data-index="{{index}}" data-typeId="{{type.id}}" bindtap="switchCategory">{{type.name}}</view>
    </block>
  </scroll-view>
  <view class="map-container">
     <map id="herpinkMap" controls="{{controls}}" show-location longitude="{{defaultLongitude}}" latitude="{{defaultLatitude}}" scale="14" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location></map>
  </view>
</view>
