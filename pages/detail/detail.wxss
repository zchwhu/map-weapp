/* pages/detail/detail.wxss */
@import "stars/stars-template.wxss";

Page{
    background: #efefef;
    color: #666;
}

.container{
    display: flex;
    flex-direction: column;
}

.head-img{
    width: 100%;
    height: 500rpx;
}

.name{
    margin-bottom: 40rpx;
    padding-left: 20rpx;
    line-height: 80rpx;
    color: #f69;
    font-size: 42rpx;
    font-weight: bolder;
    background-color: #fff;
    border: 1px solid #ddd;
}

.info{
    display: flex;
    flex-direction: column;
    margin-bottom: 40rpx;
    padding-left: 20rpx;
    background-color: #fff;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
}

.item{
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    padding: 10rpx 0;
    font-size: 28rpx;
    border-bottom: 1px solid #eee;
}

.item image{
    flex-basis: 50rpx;
    margin-top: 4rpx;
    margin-right: 8rpx;
    width: 45rpx;
    height: 45rpx;
}

.item .content{
    display: flex;
    line-height: 55rpx;
    flex: 1;
    font-size: 34rpx;
}

.detail{
    display: flex;
    flex-direction: column;
    padding-left: 20rpx;
    background-color: #fff;
    border-top: 1px solid #ddd;
}

.title{
    display: flex;
    flex-direction: row;
    line-height: 80rpx;
    font-size: 36rpx;
    border-bottom: 1px solid #eee;
}

.title image{
    width: 40rpx;
    height: 40rpx;
    margin-top: 20rpx;
    margin-right: 10rpx;
}

.intro{
    padding: 20rpx 20rpx 20rpx 5rpx;
    line-height: 48rpx;
    font-size: 32rpx;
    text-align: justify;
}